<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="project1.controller.PurchaseOrderItem">

  <Page
    id="pagePOI"
    title="Purchase Order Item"
    showNavButton="true"
    navButtonPress=".onNavBack">

    <content>

      <Table
        id="tblPOI"
        growing="true"
        growingScrollToLoad="true"
        inset="false">

        <headerToolbar>
          <Toolbar id="_IDGenToolbar1">
            <Title id="_IDGenTitle1" text="Items"/>
            <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
            <Text id="txtHeader" text=""/>
          </Toolbar>
        </headerToolbar>

        <columns>
          <Column id="_IDGenColumn21"><Text id="_IDGenText43" text="ID"/></Column>
          <Column id="_IDGenColumn22"><Text id="_IDGenText44" text="Header ID"/></Column>
          <Column id="_IDGenColumn23"><Text id="_IDGenText45" text="Line"/></Column>
          <Column id="_IDGenColumn24"><Text id="_IDGenText46" text="Net Price"/></Column>
          <Column id="_IDGenColumn25"><Text id="_IDGenText47" text="Net Amount"/></Column>
          <Column id="_IDGenColumn26"><Text id="_IDGenText48" text="Tax Amount"/></Column>
          <Column id="_IDGenColumn107"><Text id="_IDGenText49" text="Gross Amount"/></Column>
        </columns>

        <items>
          <!-- template -->
          <ColumnListItem id="poItemTemplate">
            <cells>
              <Text id="_IDGenText50" text="{po>ID}"/>
              <Text id="_IDGenText51" text="{po>header_ID}"/>
              <Text id="_IDGenText52" text="{po>lineItemNo}"/>
              <Text id="_IDGenText53" text="{po>netPrice}"/>
              <Text id="_IDGenText54" text="{po>netAmount}"/>
              <Text id="_IDGenText206" text="{po>taxAmount}"/>
              <Text id="_IDGenText207" text="{po>grossAmount}"/>
            </cells>
          </ColumnListItem>
        </items>

      </Table>

    </content>
  </Page>

</mvc:View>
